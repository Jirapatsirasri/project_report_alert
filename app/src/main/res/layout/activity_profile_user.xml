<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileUser"
    android:background="#FCF3CF">

    <ImageView
        android:id="@+id/pro"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/profiletext"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/borderbtn2"
        android:text="Edit Username"
        android:textColor="@color/colorWhite"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:layout_below="@id/profile1"
        android:textSize="20dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="72dp"
        android:text="Email : "
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="325dp"
        android:textColor="@color/colorText"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:layout_below="@id/email"
        android:textSize="20dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="72dp"
        android:text="Username : "
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="325dp"
        android:textColor="@color/colorText"
        />

    <ImageView
        android:id="@+id/profile1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/pro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile" />

</RelativeLayout>